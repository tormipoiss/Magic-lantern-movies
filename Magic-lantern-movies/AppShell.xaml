<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Magic_lantern_movies.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Magic_lantern_movies"
    Shell.FlyoutBehavior="Disabled"
    Title="Magic_lantern_movies"
    xmlns:pages="clr-namespace:Views">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:Home}"
        Route="Home" />
    <ShellContent
        Title="Details"
        ContentTemplate="{DataTemplate pages:FilmDetails}"
        Route="MovieDetails" />

</Shell>
