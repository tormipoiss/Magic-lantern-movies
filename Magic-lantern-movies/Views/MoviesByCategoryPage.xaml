<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Views.MoviesByCategoryPage"
             Title="Movies by category"
             xmlns:viewmodels="clr-namespace:ViewModels"
             xmlns:models="clr-namespace:Models"
             x:DataType="viewmodels:MoviesByCategoryViewModel">

    
    <ContentPage.Resources>
        <DataTemplate x:Key="MovieTemplate" x:DataType="models:Movie">
            <Grid Padding="7">
                <Frame HeightRequest="123"
                       Padding="0"
                       CornerRadius="12">
                    <Grid Padding="0"
                          ColumnDefinitions="82, *">

                        <Image Aspect="AspectFill"
                               Source="{Binding Image}"
                               WidthRequest="82"
                               HeightRequest="123"/>

                        <VerticalStackLayout Grid.Column="1"
                                             Padding="10, 0, 0, 0"
                                             VerticalOptions="Center">
                            <Label Text="{Binding Name}" 
                                   Style="{StaticResource LargeLabel}" />
                            <HorizontalStackLayout Spacing="6"
                                                   Padding="0, 10, 0, 10">
                                <Label Text="{Binding FormattedPublicationDate}" />
                                <Label Text="|" />
                                <Label Text="{Binding FormattedAgeRating}" />
                                <Label Text="|" />
                                <Label Text="{Binding FormattedDuration}" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding FormattedRating}" 
                                   TextColor="{Binding FormattedRatingColor}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </Grid>
        </DataTemplate>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout>
            <Label Text="{Binding Text}" Style="{StaticResource LargeLabel}" Margin="10, 0, 0, 0"/>

            <Grid Margin="10, 5, 0, 0"
                  ColumnDefinitions="Auto,Auto,Auto">

                <Label Text="Sort by: "
                       Style="{StaticResource LargeLabel}"
                       Grid.Column="0" 
                       Margin="0, 2, 0, 0"/>

                <Frame HeightRequest="30"
                       Padding="5"
                       CornerRadius="12"
                       Grid.Column="1"
                       Margin="10, 0, 14, 0" >
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnRankingLabelTapped" />
                    </Frame.GestureRecognizers>

                    <Grid ColumnDefinitions="Auto,Auto">

                        <Label Text="Ranking"
                               x:Name="SortingLabel"
                               Style="{StaticResource LargeLabel}"
                               TextColor="#0e75c4"
                               Grid.Column="0"
                               Margin="0, 0, 6, 0"
                               Padding="0, 0, 0, 6"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center">
                        </Label>

                        <Image Source="small_arrow_select.png"
                               Aspect="AspectFit"
                               Grid.Column="1"
                               WidthRequest="8" 
                               VerticalOptions="Center" 
                               HorizontalOptions="Center"
                               Margin="0, 0, 0, 3" />

                    </Grid>

                </Frame>

                <Frame HeightRequest="30"
                       Padding="5"
                       CornerRadius="12"
                       Grid.Column="2">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSortingOrderTapped" />
                    </Frame.GestureRecognizers>

                    <Image Source="arrow_up.png"
                           x:Name="SortingOrderImage"
                           Aspect="AspectFit"
                           WidthRequest="17"
                           Margin="0, 0, 0, 2" />

                </Frame>
            </Grid>

            <CollectionView ItemsSource="{Binding Movies}"
                            ItemTemplate="{StaticResource MovieTemplate}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="{Binding ColumnSpan}" />
                </CollectionView.ItemsLayout>
            </CollectionView>
        </StackLayout>
    </ScrollView>


</ContentPage>